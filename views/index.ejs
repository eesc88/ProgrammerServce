        <div class="col-md-5 column">
            <h2>
                翻译内容:
            </h2>
            <textarea class="form-control" ng-model="translationContent" style="height: 300px;resize: none;"></textarea>
        </div>
        <div class="col-md-2 column">
            <p>
                <button ng-click="doTranslation()" type="button" class="btn btn-primary btn-lg">翻译</button>
            </p>
        </div>
        <div class="col-md-5 column">
            <h2>
                翻译结果：
            </h2>
            <div style="border-color: #d1d1d1; border: 1px solid ;height: 300px;padding: 8px;">
                <p> {{ translationResult }}</p>
            </div>
        </div>
    </div>
</div>


<script>
    var app = angular.module('translation', []);
    app.controller('personCtrl', function ($scope, $http) {
        $scope.translationContent = "",
                $scope.translationResult = "Doe"

        $scope.doTranslation = function () {
            var content = $scope.translationContent;
            var url = "/translate/doTranslate?content=" + content;
            $http.get(url)
                    .success(function (response) {
                        if (response.code == 1) {
                            $scope.translationResult = response.info.translation;
                        } else {
                            $scope.translationResult = response.info;
                        }
                    });
        };
    });


</script>
